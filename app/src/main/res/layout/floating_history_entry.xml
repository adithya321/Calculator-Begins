<com.pimp.calculator.FloatingView.HistoryLine xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/menu_bg"
    android:focusable="false"
    android:orientation="vertical"
    android:padding="6dp">

    <TextView
        android:id="@+id/historyExpr"
        style="@style/Theme.Calculator.ButtonStyle.FloatingCalc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:gravity="left"
        android:textColor="@android:color/white"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/historyResult"
        style="@style/Theme.Calculator.ButtonStyle.FloatingCalc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:gravity="right"
        android:textColor="@android:color/white"
        android:textSize="25sp" />
</com.pimp.calculator.FloatingView.HistoryLine>
