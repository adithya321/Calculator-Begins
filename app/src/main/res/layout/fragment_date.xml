<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/date_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <com.balysv.materialripple.MaterialRippleLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:mrl_rippleColor="@color/LightGrey"
            app:mrl_rippleDelayClick="false"
            app:mrl_rippleDuration="500"
            app:mrl_rippleFadeDuration="1000"
            app:mrl_rippleOverlay="true">

            <Button
                android:id="@+id/start_date_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:tag="text_color|primary_text,background|primary_color"
                android:text="START DATE" />
        </com.balysv.materialripple.MaterialRippleLayout>

        <com.balysv.materialripple.MaterialRippleLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:mrl_rippleColor="@color/LightGrey"
            app:mrl_rippleDelayClick="false"
            app:mrl_rippleDuration="500"
            app:mrl_rippleFadeDuration="1000"
            app:mrl_rippleOverlay="true">

            <Button
                android:id="@+id/start_time_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:tag="text_color|primary_text,background|primary_color"
                android:text="TIME" />
        </com.balysv.materialripple.MaterialRippleLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <com.balysv.materialripple.MaterialRippleLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:mrl_rippleColor="@color/LightGrey"
            app:mrl_rippleDelayClick="false"
            app:mrl_rippleDuration="500"
            app:mrl_rippleFadeDuration="1000"
            app:mrl_rippleOverlay="true">

            <TextView
                android:id="@+id/startDateTextView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:tag="text_color|secondary_text,background|accent_color"
                android:text="yyyy-mm-dd"
                android:textAppearance="?android:attr/textAppearanceMedium" />
        </com.balysv.materialripple.MaterialRippleLayout>

        <com.balysv.materialripple.MaterialRippleLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:mrl_rippleColor="@color/LightGrey"
            app:mrl_rippleDelayClick="false"
            app:mrl_rippleDuration="500"
            app:mrl_rippleFadeDuration="1000"
            app:mrl_rippleOverlay="true">

            <TextView
                android:id="@+id/startTimeTextView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:tag="text_color|secondary_text,background|accent_color"
                android:text="hh:mm"
                android:textAppearance="?android:attr/textAppearanceMedium" />
        </com.balysv.materialripple.MaterialRippleLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <com.balysv.materialripple.MaterialRippleLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:mrl_rippleColor="@color/LightGrey"
            app:mrl_rippleDelayClick="false"
            app:mrl_rippleDuration="500"
            app:mrl_rippleFadeDuration="1000"
            app:mrl_rippleOverlay="true">

            <Button
                android:id="@+id/end_date_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:tag="text_color|primary_text,background|primary_color"
                android:text="END DATE" />
        </com.balysv.materialripple.MaterialRippleLayout>

        <com.balysv.materialripple.MaterialRippleLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:mrl_rippleColor="@color/LightGrey"
            app:mrl_rippleDelayClick="false"
            app:mrl_rippleDuration="500"
            app:mrl_rippleFadeDuration="1000"
            app:mrl_rippleOverlay="true">

            <Button
                android:id="@+id/end_time_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:tag="text_color|primary_text,background|primary_color"
                android:text="TIME" />
        </com.balysv.materialripple.MaterialRippleLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <com.balysv.materialripple.MaterialRippleLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:mrl_rippleColor="@color/LightGrey"
            app:mrl_rippleDelayClick="false"
            app:mrl_rippleDuration="500"
            app:mrl_rippleFadeDuration="1000"
            app:mrl_rippleOverlay="true">

            <TextView
                android:id="@+id/endDateTextView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:tag="text_color|secondary_text,background|accent_color"
                android:text="yyyy-mm-dd"
                android:textAppearance="?android:attr/textAppearanceMedium" />
        </com.balysv.materialripple.MaterialRippleLayout>

        <com.balysv.materialripple.MaterialRippleLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:mrl_rippleColor="@color/LightGrey"
            app:mrl_rippleDelayClick="false"
            app:mrl_rippleDuration="500"
            app:mrl_rippleFadeDuration="1000"
            app:mrl_rippleOverlay="true">

            <TextView
                android:id="@+id/endTimeTextView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:tag="text_color|secondary_text,background|accent_color"
                android:text="hh:mm"
                android:textAppearance="?android:attr/textAppearanceMedium" />
        </com.balysv.materialripple.MaterialRippleLayout>
    </LinearLayout>

    <com.balysv.materialripple.MaterialRippleLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        app:mrl_rippleColor="@color/LightGrey"
        app:mrl_rippleDelayClick="false"
        app:mrl_rippleDuration="500"
        app:mrl_rippleFadeDuration="1000"
        app:mrl_rippleOverlay="true">

        <TextView
            android:id="@+id/result"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:tag="text_color|primary_text,background|primary_color"
            android:text="result"
            android:textAppearance="?android:attr/textAppearanceLarge" />
    </com.balysv.materialripple.MaterialRippleLayout>
</LinearLayout>